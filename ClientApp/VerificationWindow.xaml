<Window x:Class="ClientApp.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="VerificationWindow" Height="150" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="20,10,20,67" VerticalAlignment="Center" HorizontalAlignment="Center">Verification code :</TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="20,40" x:Name="VerificationCodeTextBox" />
        <Button Grid.Row="1" Grid.Column="1" Click="Button_Click" Margin="20,67,20,10">Verify</Button>
    </Grid>
</Window>
