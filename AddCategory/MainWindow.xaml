<Window x:Class="AddCategory.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:local="clr-namespace:AddCategory"

        mc:Ignorable="d"

        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Enter Category Name:" Margin="20" VerticalAlignment="Top"/>
        <TextBox x:Name="CategoryNameTextBox" Margin="20,40,20,0" VerticalAlignment="Top"/>
        <TextBlock Text="Select Group:" Margin="20,80,20,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="GroupComboBox" Margin="20,110,20,0" VerticalAlignment="Top">
            <ComboBoxItem Content="Group 1"/>
            <ComboBoxItem Content="Group 2"/>
        </ComboBox>
        <Button Content="Save" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="100" Click="SaveButton_Click"/>
    </Grid>
</Window>