<Window x:Class="RegistrationWindowApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistrationWindowApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="13,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="11,1"/>
            <Setter Property="BorderBrush" Value="black"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="30,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="444.4"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <!--<RowDefinition Height="45"></RowDefinition>-->
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="1" FontSize="40" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Center">Register</Label>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="FullnameTextBox" TextChanged="FullnameTextBox_TextChanged"/>
        <TextBox Grid.Column="1" Grid.Row="3" x:Name="EmailTextBox" TextChanged="EmailTextBox_TextChanged"/>
        <!--<TextBox Grid.Column="1" Grid.Row="4" x:Name="PhoneTextBox" TextChanged="PhoneTextBox_TextChanged"/>-->
        <TextBox Grid.Column="1" Grid.Row="4" x:Name="PasswordTextBox" TextChanged="PasswordTextBox_TextChanged"/>
        <TextBlock Grid.Column="1" Grid.Row="2" x:Name="FullnameTextBlock" Text="Username"/>
        <TextBlock Grid.Column="1" Grid.Row="3" x:Name="EmailTextBlock" Text="E-mail"/>
        <!--<TextBlock Grid.Column="1" Grid.Row="4" x:Name="PhoneTextBlock" Text="Phone"/>-->
        <TextBlock Grid.Column="1" Grid.Row="4" x:Name="PasswordTextBlock" Text="Password"/>
        <Button Grid.Column="1" Grid.Row="5" Click="ButtonRegister" FontSize="17" FontWeight="Bold" Margin="70,30" BorderBrush="black" BorderThickness="3,1" ClickMode="Press">Register</Button>
    </Grid>
</Window>
